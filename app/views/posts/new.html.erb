<%= form_tag posts_path do %>
  <label>Post title:</label><br>
  <%= text_field_tag :'post[title]' %><br>

<h3>Post Form</h3>
  <label>Post description:</label><br>
  <%= text_area_tag :'post[description]' %><br>

  <%= submit_tag "Submit Post" %>
<% end %>

<%= params.inspect %>

<!--form_tag, posts_path, text_field_tag, hidden_field_tag, form_authenticity_token, anything with _tag is an ActionView Rails helper method -->
